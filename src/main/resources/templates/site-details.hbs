{{#partial "sites"}}

    {{#if engineers}}
        <ol  class="list-group">
            {{#each engineers }}
                <li class="list-group-item list-group-item-light" id="{{id}}"><strong>{{id}}. </strong><strong>Engineer Name: </strong>{{firstName}} {{secondName}}, <strong>Employee Number: </strong>  {{ekNo}}
                    <ol>
                        <span class="cell primary">Assigned Sites</span>

                        <li><strong>SiteID: </strong> {{assignedSiteId}}</li>
                    </ol>
                </li>
                <hr class="mt-2 mb-5">

            {{/each}}
        </ol>
    {{else}}
        <p>No site</p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}